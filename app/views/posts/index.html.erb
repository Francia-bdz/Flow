<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p style="font-weight: bold">Picture: </p>
    <%= image_tag(post.picture) %>
    <br/>
     <p style="font-weight: bold">Description:</p>
    <%= post.description %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "Nouveau post", new_post_path %>
